@model IEnumerable<Videoo.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View Customers</h2>

<h2> </h2>
<button type="submit"> @Html.ActionLink("New", "New")</button>
<h2> </h2>



@if (Model.Count() == 0)
{
    <p>We don't have any customers.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Membership Type</th>
            </tr>
        </thead>

        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
            <tr>
                <td>@Html.ActionLink(Model.ElementAt(i).Name, "Edit", "Customers", new { id = Model.ElementAt(i).Id }, null)</td>
                <td>@Model.ElementAt(i).MembershipType.Name</td>
                <td>@Html.ActionLink("Delete", "Delete", "Customers", new { id = Model.ElementAt(i).Id }, null)</td>
            </tr>
            }
        </tbody>
    </table>
}

