@model IEnumerable<Videoo.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View Movies</h2>

<h2> </h2>
<button type="submit"> @Html.ActionLink("New", "New")</button>
<h2> </h2>



@if (Model.Count() == 0)
{
    <p>We don't have any movies.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
        </thead>

        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <td>@Html.ActionLink(Model.ElementAt(i).Name, "Edit", "Movies", new { id = Model.ElementAt(i).Id }, null)</td>
                    <td>@Model.ElementAt(i).Genre.Name</td>
                </tr>
            }
        </tbody>
    </table>
}
